<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/vato" />

        <TextView
            android:id="@+id/txtxe1"
            android:layout_width="274dp"
            android:layout_height="40sp"
            android:text="20.000 VNĐ"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnxe1"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="Chọn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/govietvuong" />

        <TextView
            android:id="@+id/txtxe3"
            android:layout_width="274dp"
            android:layout_height="40sp"
            android:text="21.000 VNĐ"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnxe3"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="Chọn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/be" />

        <TextView
            android:id="@+id/txtxe4"
            android:layout_width="274dp"
            android:layout_height="40sp"
            android:text="15.000 VNĐ"
            android:textSize="30sp" />

        <Button
            android:onClick="ChonXeBonCho"
            android:id="@+id/btnxe4"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="Chọn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/grabcar" />

        <TextView
            android:id="@+id/txtxe2"
            android:layout_width="274dp"
            android:layout_height="40sp"
            android:text="25.000 VNĐ"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnxe2"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:text="Chọn" />
    </LinearLayout>


</LinearLayout>