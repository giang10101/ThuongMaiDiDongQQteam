<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThanhToanActivity">

    <TextView
        android:id="@+id/txtten"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="10sp"
        android:text="Phương thức thanh toán"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/sacombank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            app:srcCompat="@mipmap/sacombank" />

        <TextView
            android:onClick="ThanhToanSCB"
            android:id="@+id/txtscb"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="8sp"
            android:text="2255"
            android:textAlignment="viewStart"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            app:srcCompat="@mipmap/bidv" />

        <TextView
            android:id="@+id/txtbidv"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="8sp"
            android:text="5606"
            android:textAlignment="viewStart"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_marginLeft="5sp"
            app:srcCompat="@mipmap/vietcombank" />

        <TextView
            android:id="@+id/txtvcb"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="8sp"
            android:text="0369"
            android:textAlignment="viewStart"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:onClick="ThemThe"
            android:id="@+id/txtThemThe"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:text="+ Thêm thẻ "
            android:textAlignment="center"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDatVe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="đặt vé"
            android:onClick="DatVe"/>

        <Button
            android:id="@+id/btnDatXe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="đặt xe"
            android:onClick="DatXe"/>

        <Button
            android:id="@+id/btnMuaSam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mua sắm"
            android:onClick="MuaSam"/>
    </LinearLayout>

</LinearLayout>